{% extends 'base.html.twig' %}

{% block title %}Todas las tareas{% endblock %}

{% block body %}


<div class="example-wrapper">
    <h2>{{task.title}}</h2>
    
    <p class="data-task" style="margin: 1em auto;
    max-width: 800px;
    width: 95%;
    color: gray;">{{task.user.name ~' ' ~ task.user.surname ~' | ' ~ task.createdAt|date('d/m/Y')}} | 
        {% if task.priority == 'high' %}
            {{ 'Alta' }}
        {% endif %}
        {% if task.priority == 'medium' %}
            {{ 'Media' }}
        {% endif %}
        {% if task.priority == 'low' %}
            {{ 'Baja' }}
        {% endif %} | 
        {{task.hours}} h
    </p>
    <div class="content" style="margin: 1em auto;
    max-width: 800px;
    width: 95%;  ">
        <p>{{task.content}}</p>
    </div>
    
    

    
</div>
{% endblock %}
